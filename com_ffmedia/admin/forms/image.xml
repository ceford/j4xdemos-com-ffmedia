<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset name="image" label="COM_FFMEDIA_IMAGE_TAB">

		<field
			name="alt"
			type="text"
			label="COM_FFMEDIA_IMAGE_ALT_LABEL"
			size="40"
			required="true"
		 />

		<field
			name="file_name"
			type="text"
			label="COM_FFMEDIA_FILE_UPLOAD_FILE_NAME_LABEL"
			size="40"
			required="true"
		 />

		<field
			name="caption"
			type="textarea"
			label="COM_FFMEDIA_IMAGE_CAPTION_LABEL"
			rows="5"
			cols="40"
			required="true"
		 />

		<field
			name="published"
			type="list"
			label="JSTATUS"
			default="1"
			id="published"
			class="custom-select-color-state"
			size="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field
			name="uploadfile"
			type="file"
			label="COM_FFMEDIA_IMAGE_UPLOAD_FILE_LABEL"
			description="COM_FFMEDIA_IMAGE_UPLOAD_FILE_DESC"
		/>

		<field
			name="tn_width"
			type="list"
			label="COM_FFMEDIA_IMAGE_THUMB_LABEL"
			default="100"
			>
			<option value="0">0</option>
			<option value="100">100</option>
			<option value="150">150</option>
		</field>

		<field
			name="id"
			type="number"
			label="JGLOBAL_FIELD_ID_LABEL"
			default="0"
			class="readonly"
			readonly="true"
		/>

		<field
			name="media_type"
			type="hidden"
			default="image"
		/>

	</fieldset>

</form>
